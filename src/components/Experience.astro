---
import { Icon } from "astro-icon/components";

const { title, ent, year, desc } = Astro.props;
---

<div class="md:container flex flex-row">
    <div class="flex flex-col mx-auto">
        <div class="p-8 text-white" id="icon">
            <Icon class="text-4xl text-white" name="brief" />
        </div>

        <div class="flex flex-row h-full">
            <div class="w-full" id="linea"></div>
            <div class="w-full"></div>
        </div>
    </div>

    <div
        id="contenidoExperience"
        class="md:container flex flex-col w-full pt-8"
    >
        <header class="flex flex-col mx-auto w-full">
            <div id="empresa" class="flex flex-row gap-4">
                <h2 class="text-4xl font-bold text-white ">{title}</h2>
               
                <div class="flex items-center">

                    <span class="bg-gradient-to-r from-blue-800 to-indigo-900 text-white text-sm font-semibold mr-2 px-3 py-1 rounded">{year}</span>



                </div>
            </div>
        </header>

        <h3 class="text-2xl font-light text-gray-300">{ent}</h3>
        <p class="text-white text-left text-2xl pt-8 mb-40">
            {desc}
        </p>
    </div>
</div>

<style>
    #linea {
        display: flex;
        justify-content: center;
        border-right: 4px solid #ff6d91;

        border-image: linear-gradient(
                360deg,
                rgb(28, 15, 169) 0%,
                rgb(9, 218, 250) 55%,
                rgb(110, 250, 3) 96%
            )
            1 100%;
    }
</style>
